---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

import heroImage from '~/assets/images/hero-image.png';

const metadata = {
  title: "CollectorOfJack.com, the ultimate site for Jack Daniel's information!",
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Explore the Collection!',
        href: '/blog',
        target: '_self',
        icon: 'tabler:glass',
      },
      { text: 'About us', href: '/about' },
    ]}
    image={{ src: heroImage, alt: 'Collector Of Jack Hero Image', aspectRatio: '2:1.999' }}
  >
    <Fragment slot="title">
      Welcome to the ultimate Jack Daniel's collector site! <span class="hidden xl:inline">Discover everything about Jack!</span>
      <span class="text-accent dark:text-white highlight">Check out the latest additions!</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">CollectorOfJack.com</span> is your premier source for Jack Daniel's history, collectibles, and news.
      </span>
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- Features Widget *************** -->

  <!-- BlogLatestPost Widget **************** -->

  <BlogLatestPosts
    id="blog"
    title="Check Out Our Blog"
    information={`Stay updated with news, reviews, and deep dives into Jack Daniel's history!`}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-yellow-50 dark:bg-transparent"></div>
    </Fragment>
  </BlogLatestPosts>

  <Features
    id="features"
    tagline="Explore"
    title="What You'll Find Here"
    subtitle="CollectorOfJack.com is dedicated to fans of Jack Daniel's, providing insights into the brand's rich history, collectibles, and culture."
    items={[
      {
        title: 'ðŸ“œ Historical Insights',
        description: "Dive into the rich history of Jack Daniel's, from its founding to its iconic status today.",
        icon: 'tabler:history',
      },
      {
        title: "ðŸ¥ƒ Collector's Items",
        description: 'Discover rare bottles, memorabilia, and tips for building your own collection.',
        icon: 'tabler:bottle',
      },
      {
        title: 'ðŸ“° Latest News',
        description: 'Stay informed with updates on new releases, events, and everything Jack-related.',
        icon: 'tabler:news',
      },
      {
        title: 'ðŸ“¸ Stories & Photos',
        description:
          "Explore personal stories, photos of rare finds, and moments shared by fans worldwide.",
        icon: 'tabler:photo',
      },
      {
        title: 'ðŸŒ Community',
        description:
          "Join a passionate community of Jack Daniel's enthusiasts to share tips, stories, and more.",
        icon: 'tabler:users',
      },
    ]}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    subtitle="Common questions about Jack Daniel's and the site."
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'What is CollectorOfJack.com?',
        description:
          "CollectorOfJack.com is a fan-driven site dedicated to all things Jack Daniel's, including history, collectibles, and news.",
      },
      {
        title: 'Can I contribute to the site?',
        description:
          "Absolutely! We welcome stories, photos, and information from the Jack Daniel's community. Reach out through our contact page to contribute.",
      },
      {
        title: "Is Jack Daniel's involved with the site?",
        description:
          "No, CollectorOfJack.com is an independent fan site and is not affiliated with Jack Daniel's Distillery.",
      },
      {
        title: "How can I start a Jack Daniel's collection?",
        description:
          'Start small by exploring limited editions and memorabilia. Visit our blog for tips and advice on collecting!',
      },
      {
        title: 'What kind of content can I find here?',
        description:
          "You'll find everything from historical insights and bottle reviews to community stories and news updates.",
      },
      {
        title: 'How can I contact CollectorOfJack.com?',
        description:
          "You can reach out through the <a href='/contact'>contact form on the website</a>. We'd love to hear from you!",
      },
    ]}
  />


  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: 'Bottles Collected', amount: '300+' },
      { title: 'Years of History', amount: '150+' },
      { title: 'Fans in Community', amount: '45,000+' },
      { title: 'Rare Finds', amount: '1' },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Explore the Collection!',
        href: '/collection',
        target: '_blank',
        icon: 'tabler:glass',
      },
    ]}
  >
    <Fragment slot="title"> CollectorOfJack.com </Fragment>

    <Fragment slot="subtitle"> Your ultimate Jack Daniel's resource! </Fragment>
  </CallToAction>
</Layout>
