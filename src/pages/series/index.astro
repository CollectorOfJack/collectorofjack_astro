---
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Layout from '~/layouts/PageLayout.astro';
import Features3 from '~/components/widgets/Features3.astro';

import pageImage from '~/assets/images/fullsized/TastersSeriesGroup-1.jpg';

const metadata = {
  title: "Jack Daniel's Releases/Series",
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Jack Daniel's Releases & Series"
    image={{
      src: pageImage,
      alt: 'Various Jack Daniel’s bottles from different series and releases.',
    }}
  >
    <Fragment slot="title">
      Explore the world of 
      <span class="text-accent dark:text-white highlight">Jack Daniel's Series</span>
    </Fragment>

    <Fragment slot="subtitle">
      Discover the unique collections and releases that make Jack Daniel’s a legend in whiskey history.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Quick Facts"
    stats={[
      { title: 'First Release', amount: '1866' },
      { title: 'Number of Series', amount: '10+' },
      { title: 'Limited Edition Bottles', amount: '100+' },
      { title: 'Global Reach', amount: '170+ countries' },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Notable Jack Daniel's Series"
    subtitle="A curated selection of iconic releases"
    columns={2}
    isBeforeContent={true}
    items={[
      {
        title: 'Master Distiller Series',
        description:
          'A tribute to the seven master distillers who have crafted Jack Daniel’s over the years. Each bottle highlights a unique era of the brand’s history.',
        icon: 'tabler:bottle',
      },
      {
        title: 'Single Barrel Select',
        description:
          'Each barrel is hand-selected for its distinct flavor profile, offering a one-of-a-kind whiskey experience.',
        icon: 'tabler:barrel',
      },
      {
        title: 'Tennessee Tasters’ Selection',
        description:
          'Limited edition experimental whiskeys showcasing innovative finishes and flavor profiles.',
        icon: 'tabler:flask',
      },
      {
        title: 'Bonded Series',
        description:
          'A nod to the Bottled-in-Bond Act, this series highlights Jack Daniel’s commitment to quality and tradition.',
        icon: 'tabler:certificate',
      },
      {
        title: 'Holiday Select',
        description:
          'Seasonal releases crafted to celebrate the holidays, often featuring collectible packaging.',
        icon: 'tabler:gift',
      },
      {
        title: 'Legacy Edition',
        description:
          'A series that revisits classic Jack Daniel’s labels, offering a glimpse into the brand’s storied past.',
        icon: 'tabler:history',
      },
    ]}
  />
</Layout>
