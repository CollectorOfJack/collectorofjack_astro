---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(138, 90, 68);  /* Lighter, warmer brown */
    --aw-color-secondary: rgb(184, 115, 51); /* Copper */
    --aw-color-accent:  rgb(110, 64, 16);   /* Deep, rich brown */ 

    --aw-color-text-heading: rgb(0, 0, 0);     /* Black for headings */
    --aw-color-text-default: rgb(60, 60, 60);  /* Dark gray for body text */
    --aw-color-text-muted: rgb(60, 60, 60 / 66%); /* Muted dark gray */
    --aw-color-bg-page: rgb(255, 255, 255);   /* White background */

    --aw-color-bg-page-dark: rgb(0, 0, 0);    /* Keep black for dark mode */
    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(110, 64, 16);   /* Deep, rich brown */
    --aw-color-secondary: rgb(138, 90, 68); /* Lighter, warmer brown */ 
    --aw-color-accent: rgb(184, 115, 51);  /* Copper */

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: rgb(0 0 0);

    --aw-color-input-text: black; /* Define a separate color for input text */
    --aw-color-input-bg: white;  /* Define a separate background color for inputs */

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
